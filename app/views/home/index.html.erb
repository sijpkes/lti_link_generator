       <!-- </textarea> -->

     </div>
   </div>
   <div class="row">
    <div class="span8">
      <input class="form-control btn-warning" type="submit" value="Generate" name="generate">
    </div>
  </div>
</div>
</form>
</div>
<%= tinymce :theme => 'modern', :skin => 'light', :plugins => ["wordcount", "paste", "code", "image"] %>
