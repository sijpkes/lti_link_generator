<script type=text/javascript>

// Prevent Bootstrap dialog from blocking focusin
$(document).on('focusin', function(e) {
  if ($(e.target).closest(".mce-window").length) {
    e.stopImmediatePropagation();
  }
});

$('#upload_rubric').click(function() {
  $.ajax({ // create an AJAX call
    data: {do_upload_rubric: 1},
    type: 'POST',
    url: "<%= Rails.configuration.x.rubric_upload_url %>",
      success: function(response) { // on success..
        alert("Rubric successfully uploaded!");
        var score = JSON.parse(response).score;
        $('#total_score').val(score); // update the DIV
        $('#total_score').prop("disabled", true);
        $('#scoreOverride').show();
      }
    });
});
</script>
